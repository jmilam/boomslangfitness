<table class="table table-striped">
	<thead>
		<tr>
			<td style="text-align:center;">Log Date</td>
			<td style="text-align:center;">Total Calories</td>
			<td />
		</tr>
	</thead>
	<tbody>
		<% daily_logs.each do |daily_log| %>
			<tr>
				<td style="vertical-align: middle;text-align:center;"><%= daily_log.calendar_date.strftime("%m/%d/%Y") %></td>
				<td style="vertical-align: middle;text-align:center;"><%= daily_log.total_calories %></td>
				<td>
					<div class="btn-group-vertical">
						<%= link_to "View Log", daily_log_path(daily_log.id), class: 'btn btn-sm', style: 'background-color:#F29F05;color:white;' %><br/>
						<%#= link_to "Add Food", edit_daily_log_path(daily_log.id), class: 'btn btn-sm btn-warning' if daily_log.calendar_date.in_time_zone == Time.current.to_date.in_time_zone %></td>
					</div>
			</tr>
		<% end %>
	</tbody>
</table>